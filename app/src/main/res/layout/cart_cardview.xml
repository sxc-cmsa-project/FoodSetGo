<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cart_item_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_veg"
            android:layout_margin="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/cart_item_logo"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/cart_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:textColor="@color/goodBlack"
                android:fontFamily="@font/neue_haas_grotesk_medium_65"/>

            <TextView
                android:id="@+id/cart_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:text="Price"
                android:paddingBottom="5dp"
                android:textSize="14sp"
                android:textColor="@color/goodBlack"/>

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cart_item_name"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                >

                <com.google.android.material.button.MaterialButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/cart_addBtn"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:background="?android:attr/selectableItemBackground"
                    app:icon="@drawable/ic_add"
                    android:padding="0dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_item_count"
                    android:text="0"
                    android:textSize="35sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/cart_removeBtn"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:background="?android:attr/selectableItemBackground"
                    app:icon="@drawable/ic_remove"
                    android:padding="0dp"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/cart_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_layout"
                android:layout_alignParentRight="true"
                android:gravity="right|bottom"
                android:text="500"
                android:textSize="18sp"
                android:layout_marginRight="29dp"
                />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>